%html(style="margin: 0px; padding:0px;")
  %head
  %body(style="margin: 0px; padding:0px;")
    .omline(style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: url('#{path_to_image('header_border.png')}') repeat top left") &nbsp;
    %style(type='text/css')= File.read(File.join(Rails.root, 'public', 'stylesheets', 'email.css'))
    %div(style="padding: 10px;")
      = link_to image_tag("/images/logo.png", :alt => "Othermail", :width => 168, :height => 32), root_path
    = yield
    #footer
      - rz = (@user || resource) rescue nil
      - if rz
        %a{:href => unsubscribe_user_url(rz, :secret => rz.delivery_secret)} Unsubscribe
