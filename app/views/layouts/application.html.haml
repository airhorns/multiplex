!!!
%html
  %head
    %title Othermail
    = include_stylesheets :screen, :media => 'screen, projection'
    = include_stylesheets :print, :media => 'print'
    /[if lt IE 8]
      = include_stylesheets :ie, :media => 'screen, projection'
    = include_javascripts :main
    
    = csrf_meta_tag
  %body
    #container
      %header
        .content
          %h1 
            %a{:href=>root_path} 
              Othermail
          %nav
            %ul
              %li= link_to "{FAQ}", faq_path
              %li= link_to "{Feedback}", "#"
              - if user_signed_in?
                -#%li= link_to "Sign Out", sign_out_path
              - else
                %li= link_to "{Sign Up}", sign_up_path
      .content
        - [:error, :notice, :success, :alert].select {|f| flash[f].present? }.each do |f|
          %div(class="#{f} flash")
            = flash[f]
        = yield :before_body
        .body
          = yield
        #container_footer &nbsp;
    %footer
      <p>Copyright 2011 Otherbox. Problems? Tell us about it!</p>

    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-21995641-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
